#include <stdio.h>
#include <stdlib.h>

int main () {
	char grade;
	
	printf("Hello, type your grade : ");
	scanf(" %c",&grade);
	
	switch (grade) {
		case 'A' :
			printf("A amazing");
			break;
		case 'B' :
			printf("B is Bravo");
			break;
		case 'C' :
			printf("C is charming!");
			break;
		case 'D' :
			printf("D is Do it more!");
			break;
		case 'F' :
			printf("F is fail but it is okay, keep it up!");
			break;
		default :
			printf("Invalid grade leter, which has to be uppercase.");
			break;
		
	}
	return 0;
}
