#include <stdio.h>

int main(void)
{
	
//we can use variables(changeable) and constants(nonchangeable)

	int x;
	x=5;
	printf("%d",x);
	printf("variable x' memory size is %d",sizeof(x));
	return 0;
	
}

--------------------------------------------------------------
오버플로우의 개념
#include <stdio.h>
#include <limits.h>

int main(void)
{
    int x = INT_MAX;
    printf("int's max val x is %d. \n",x);
    printf ("x + 1 is %d",x+1);
    return 0;
}
---------------------------------------------------------------
