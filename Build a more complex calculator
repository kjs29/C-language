#include <stdio.h>
#include <stdlib.h>

int main () {
	double num1;
	double num2;
	char op;
	
	
	printf("Enter a number :");
	scanf("%Lf",&num1);
	printf("Enter operator : ");
	scanf(" %c",&op);           //we have to put a space after the first ".
	printf("Enter a number :");
	scanf("%Lf",&num2);
	if (op == '+') {
		printf("%Lf",num1 + num2);
	} else if (op == '-') {
		printf("%Lf",num1 - num2);
	} else if (op == '/') {
		printf("%Lf",num1 / num2);
	} else if (op == '*') {
		printf("%Lf",num1 * num2);
	} else {
		printf("Invalid Operator");
	}
	return 0;
}
