//Pointer

#include <stdio.h>
#include <stdlib.h>

int main () {
	int age = 29;
	int * pAge = &age; //create a pointer variable which is going to store a memory address of age
	double gpa = 3.4;
	int * pGpa = &gpa; //create a pointer variable which is going to store a memory address of gpa
	char grade = 'A';
	int * pGrade= &grade; //create a pointer variable which is going to store a memory address of grade
	
	
	printf("%p",&age); // %p is a specifier to print pointer, and &age is a pointer
	
	
	return 0;
}
